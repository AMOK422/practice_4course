<Window x:Class="practice1.Message"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:practice1"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Message"  Height="200" Width="300">
    <Grid Background="#22202f">
        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock TextWrapping="Wrap" FontSize="14" Name="tbmes" Text="This is a notification message." FontFamily="/Fonts/#Montserrat" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White"/>

            <Button VerticalAlignment="Center" HorizontalAlignment="Center" Style="{StaticResource ButtonStyle1}" Foreground="White" Grid.Row="1" Content="Закрыть" Width="75" Margin="0 10 0 0"  Click="CloseButton_Click"/>
        </Grid>
    </Grid>
</Window>
